@model List<RequestStatus>
<table id="Tat" class="table table-striped table-bordered dt-responsive nowrap">
    <thead>
        <tr>
            <th>Request No</th>
            <th>TAT</th>
            <th>Request Date</th>
            <th>Approved/Rejected</th>
            <th>Closing Date</th>
            <th>License Type</th>
        </tr>
    </thead>
    <tbody>
        @foreach (RequestStatus request in Model)
        {
            <tr>
                <td>@request.RequestNo</td>
                <td>@request.TurnAroundTime.LongDuration()</td>
                <td>@request.RequestDate.ToDisplayDateString()</td>
                <td>
                    @if (request.IsApproved.Value)
                    {<text> Approved </text>}
                    else
                    { <text> Rejected </text>}
                </td>
                <td>@request.ApproveRejectDate.ToDisplayDateString()</td>
                <td>@request.TypeName</td>
            </tr>
        }
    </tbody>
</table>
<script type="text/javascript">
    $(document).ready(function () {
        $('#Tat').DataTable({
            dom: 'lBfrtip',
            buttons: [
                'copy', 'csv', 'excel', 'pdf', 'print'
            ],
            "responsive": true,
        });
    });

    //$('.toast').toast('show');
</script>