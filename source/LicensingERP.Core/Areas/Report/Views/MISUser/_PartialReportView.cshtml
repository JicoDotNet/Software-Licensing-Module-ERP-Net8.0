@model List<ReportOfUser>

@if (Model.Count != 0)
{

    <table id="Report_View" class="table table-striped table-bordered dt-responsive nowrap">
        <thead>
            <tr>
                <th>Group</th>
                <th>Full Name</th>
                <th>User Name</th>
                <th>Designation</th>
                <th>Email</th>
                <th>Mobile</th>
                <th>Active</th>
            </tr>
        </thead>
        <tbody>
            @foreach (ReportOfUser users in Model)
            {
                <tr>
                    <td>@users.UserTypeName</td>
                    <td>@users.FullName</td>
                    <td>@users.UserName</td>
                    <td>@users.Designation</td>
                    <td>@users.Email</td>
                    <td>@users.Mobile</td>
                    <td>@(users.IsActive == true ? "Yes" : "No")</td>
                </tr>
            }

        </tbody>
    </table>
}
else
{
    <script type="text/javascript">
        toastr.error('No data Found');
    </script>
    
}
<script type="text/javascript">
    $(document).ready(function () {
        $('#Report_View').dataTable({
            "bPaginate": true,
            "bLengthChange": true,
            "bFilter": true,
            "bInfo": false,
            "bAutoWidth": false,
            "searching": true
        });
    });

    $('.toast').toast('show');
</script>