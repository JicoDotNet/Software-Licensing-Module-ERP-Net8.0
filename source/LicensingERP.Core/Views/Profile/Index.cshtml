@using LicensingERP.Models
@using LicensingERP.Logic.DTO.Class
@using LicensingERP.Logic.DTO.Custom
@model User
    @{
        ViewBag.Title = "Index";
        Layout = "~/Views/Shared/_Layout.cshtml";
    }

    <section class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-6">
                    <h1>User Details</h1>
                </div>
                <div class="col-sm-6">
                    <ol class="breadcrumb float-sm-right">
                        <li class="breadcrumb-item"><a href="@Url.Action("Index","Home")">Home</a></li>
                        <li class="breadcrumb-item active">Profile</li>
                    </ol>
                </div>
            </div>
        </div>
    </section>

    <section class="content">

        <div class="col-sm-6 col-md-6 col-md-offset-2 d-flex align-items-stretch">
            <div class="card bg-light">
               
                <div class="card-header text-muted border-bottom-0">
                    Profile Details
                </div>
                <div class="card-body pt-0">
                    <div class="row">
                        <div class="col-7">
                            <h2 class="lead"><b>@Model.FullName</b></h2>
                            <p class="text-muted text-sm"><b>Username: </b> @Model.UserName </p>
                            <ul class="ml-4 mb-0 fa-ul text-muted">
                                <li class="small"><span class="fa-li"><i class="fas fa-lg fa-building"></i></span> @Model.Address</li>
                                @*<li class="small"><span class="fa-li"><i class="fas fa-lg fa-id-badge"></i></span> @Model.Designation</li>*@
                                <li class="small"><span class="fa-li"><i class="fas fa-lg fa-envelope-open"></i></span> @Model.Email</li>
                                <li class="small"><span class="fa-li"><i class="fas fa-lg fa-phone"></i></span> @Model.Mobile</li>
                            </ul>
                        </div>
                        <div class="col-5 text-center">
                            <img src="~/Theme/dist/img/user-128x128.png" alt="" class="img-circle img-fluid">

                        </div>
                    </div>
                </div>
                <div class="card-footer">
                    <div class="text-right">
                        <a href="@Url.Action("Edit","Profile")" class="btn btn-sm btn-primary">
                            <i class="fas fa-pen"></i> Profile View
                        </a>
                    </div>
                </div>
            </div>
        </div>

    </section>

