
@model _Clients
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!-- Content Header (Page header) -->
<section class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1>Client</h1>
            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a href="@Url.Action("Index","Home")">Home</a></li>
                    <li class="breadcrumb-item active">Client</li>
                </ol>
            </div>
        </div>
    </div>
</section>

<section class="content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-12">
                <div class="card card-danger">
                    <div class="card-header bg-cyan">
                        <h3 class="card-title">

                            @if (Model.Client != null)
                            {
                                <text> Update </text>
                            }
                            else
                            {
                                <text> Add </text>
                            }
                            Client
                        </h3>
                    </div>
                    @using (Html.BeginForm("Index", "Client", new { id = ((Model.Client != null) ? Model.Client.Id.ToString() : "") }, FormMethod.Post, null, new { autocomplete = "off" }))
                    {
                        <div class="card-body">
                            <div class="row">
                                <div class="col-md-4">
                                    <div class="form-group">
                                        <label for="ClientTypeId">Client Type <span style="color:red">&#42;</span></label>
                                        <select class="form-control" name="CategoryId"   style="width:100%; @if (Model.Client != null) { <text> pointer-events: none; </text> }" required>
                                            <option value="" selected>--Please Select--</option>
                                            @foreach (ClientCategory clientCategory in Model.ClientCategories)
                                            {
                                                if (Model.Client != null)
                                                {
                                                    if (Model.Client.CategoryId == clientCategory.Id)
                                                    {
                                                        <option value="@clientCategory.Id" selected>@clientCategory.CategoryName</option>
                                                    }
                                                    else
                                                    {
                                                        <option value="@clientCategory.Id">@clientCategory.CategoryName</option>
                                                    }
                                                }
                                                else
                                                {
                                                    <option value="@clientCategory.Id">@clientCategory.CategoryName</option>
                                                }
                                            }
                                        </select>
                                    </div>
                                </div>
                                <div class="col-md-4">
                                    <div class="form-group">
                                        <label for="ClientName">Client Name <span style="color:red">&#42;</span></label>
                                        <input type="text" name="ClientName"
                                                @if (Model.Client != null) { <text> value="@Model.Client.ClientName" </text>  }
                                               class="form-control" placeholder="Enter Client Name"  required>
                                    </div>
                                </div>
                                <div class="col-md-4">
                                    <div class="form-group">
                                        <label for="ClientNumber">Mobile <span style="color:red">&#42;</span></label>
                                        <input type="text" name="ClientNumber"  
                                                 @if (Model.Client != null) { <text> value="@Model.Client.ClientNumber" </text>  }
                                               class="form-control" placeholder="Enter Mobile Number"  pattern="[0-9]{1}[0-9]{9}" title="Only Phone Number"   maxlength="10" required>
                                    </div>
                                </div>
                                <div class="col-md-4">
                                    <div class="form-group">
                                        <label for="ClientEmail">Email <span style="color:red">&#42;</span></label>
                                        <input type="email" name="ClientEmail"
                                                @if (Model.Client != null) { <text> value="@Model.Client.ClientEmail" </text>  }
                                               class="form-control" placeholder="Enter Email" pattern="[a-z0-9._%+-]+@@[a-z0-9.-]+\.[a-z]{2,}$" required>
                                    </div>
                                </div>
                                <div class="col-md-4">
                                    <div class="form-group">
                                        <label for="CompanyName">Company Name <span style="color:red">&#42;</span></label>
                                        <input type="text" name="CompanyName"
                                                @if (Model.Client != null) { <text> value="@Model.Client.CompanyName" </text>  }
                                               class="form-control" placeholder="Enter Company Name"  required>
                                    </div>
                                </div>
                                <div class="col-md-4">
                                    <div class="form-group">
                                        <label for="CompanyNumber">Company Number <span style="color:red">&#42;</span></label>
                                        <input type="text" name="CompanyNumber" 
                                                @if (Model.Client != null) { <text> value="@Model.Client.CompanyNumber" </text>  }
                                               class="form-control" placeholder="Enter Company Phone Number"  pattern="[0-9]{1}[0-9]{9}" title="Only Phone Number" maxlength="10" required>
                                    </div>
                                </div>
                                <div class="col-md-4">
                                    <div class="form-group">
                                        <label for="CompanyEmail">Company Email <span style="color:red">&#42;</span></label>
                                        <input type="email" name="CompanyEmail"
                                                 @if (Model.Client != null) { <text> value="@Model.Client.CompanyEmail" </text>  }
                                               class="form-control" placeholder="Enter Company Email" pattern="[a-z0-9._%+-]+@@[a-z0-9.-]+\.[a-z]{2,}$" required>
                                    </div>
                                </div>
                                <div class="col-md-4">
                                    <div class="form-group">
                                        <label for="GSTIN">GST No <span style="color:red">&#42;</span></label>
                                        <input type="text" name="GSTIN"
                                                @if (Model.Client != null) { <text> value="@Model.Client.GSTIN" </text>  }
                                               class="form-control" placeholder="Enter GST Number" maxlength="15" required>
                                    </div>
                                </div>
                                <div class="col-md-4">
                                    <div class="form-group">
                                        <label for="PANNo">PAN Card No <span style="color:red">&#42;</span></label>
                                        <input type="text" name="PANNo" 
                                                @if (Model.Client != null) { <text> value="@Model.Client.PANNo" </text>  }
                                               class="form-control" placeholder="Enter PAN Card No" maxlength="10" required>
                                    </div>
                                </div>
                                <div class="col-md-4">
                                    <div class="form-group">
                                        <label for="CompanyAddress">Company Address <span style="color:red">&#42;</span></label>
                                        <textarea name="CompanyAddress" class="form-control" placeholder="Enter Company Address" required>
                                         @if (Model.Client != null) { <text> @Model.Client.CompanyAddress </text>  }              
                                                            </textarea>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="card-footer">
                            @if (Model.Client != null)
                            {
                                <button type="submit" class="btn btn-warning"> <i class="fas fa-edit"></i> Update</button>
                                <button type="button" class="btn btn-danger" onclick="location.href='@Url.Action("Index","Client", new { id = string.Empty })'"><i></i> Cancel</button>
                            }
                            else
                            {
                                <button type="submit" class="btn btn-success"> <i class="fas fa-save"></i> Submit</button>
                            }

                        </div>
                    }
                </div>

            </div>
            <div class="col-md-12">
                <div class="card card-danger">
                    <div class="card-header bg-cyan">
                        <h3 class="card-title">View Type</h3>
                    </div>
                    <div class="card-body">
                        <table id="example1" class="table table-striped table-bordered dt-responsive nowrap">
                            <thead>
                                <tr>
                                    <th>Activity</th>
                                    <th>Client Type</th>
                                    <th>Name</th>
                                    <th>Mobile</th>
                                    <th>Email</th>
                                    <th>Company Name</th>
                                    <th>Company Address</th>
                                    <th>Company Number</th>
                                    <th>Company Email</th>
                                </tr>

                            </thead>
                            <tbody>
                                @foreach (Client CL in Model.Clients)
                                {
                                <tr>
                                    <td>
                                        <a class="btn btn-sm btn-primary" href="@Url.Action("Index", "Client", new { id = CL.Id })"><i class="fas fa-pen"></i> Edit</a> /
                                        <button onclick="ClientDeactivate(@CL.Id)" class="btn btn-sm btn-danger">
                                            <i class="fas fa-trash-alt pull-right"></i> Deactivate
                                        </button>
                                    </td>
                                    <td>@CL.CategoryName</td>
                                    <td>@CL.ClientName</td>
                                    <td>@CL.ClientNumber</td>
                                    <td>@CL.ClientEmail</td>
                                    <td>@CL.CompanyName</td>
                                    <td>@CL.CompanyAddress</td>
                                    <td>@CL.CompanyNumber</td>
                                    <td>@CL.CompanyEmail</td>

                                </tr>
                                }
                            </tbody>
                        </table>

                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
<div id="div_opn"></div>
@section BodyScript{
    <script type="text/javascript">
        function ClientDeactivate(id) {
            $("#div_opn").load("@Url.Action("ClientDeactivate", "Client")/" + id);
        }
    </script>
}