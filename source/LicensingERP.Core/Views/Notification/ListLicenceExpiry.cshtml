@model List<ReportOfRequest>

@{
    ViewData["Title"] = "Licence Expiry";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<section class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1>Licence Expiry</h1>
            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a href="@Url.Action("Index","Home")">Home</a></li>
                    <li class="breadcrumb-item active">Checking Licence Expiry</li>
                </ol>
            </div>
        </div>
    </div>
</section>

<section class="content">
    <div class="card">
        <div class="card-header bg-cyan">
            <h3 class="card-title">Checking Licence Expiry</h3>
            <div class="card-tools">
                <a href="#" class="btn btn-tool" data-card-widget="" data-toggle="tooltip" title="Approve">
                    <i class="far fa-check-square"></i>
                </a>
                <button type="button" class="btn btn-tool" data-card-widget="collapse" data-toggle="tooltip" title="Collapse">
                    <i class="fas fa-minus"></i>
                </button>
            </div>
        </div>
        <div class="card-body">
            <table id="example1" class="table table-striped table-bordered dt-responsive nowrap">
                <thead>
                    <tr>
                        <th>Request No</th>
                        <th>Client Name</th>
                        <th>No of License</th>
                        <th>Product</th>
                        <th>License Type</th>
                        <th>Expiry Date</th>
                        <th>Duration(Days)</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (ReportOfRequest reportOfRequest in Model)
                    {
                        DateTime dtValue = (DateTime)reportOfRequest.ExpiryDate;
                            <tr>
                                <td>@reportOfRequest.RequestNo</td>
                                <td>@reportOfRequest.ClientName</td>
                                <td>@reportOfRequest.LicenceNo</td>
                                <td>@reportOfRequest.ProductName</td>
                                <td>@reportOfRequest.TypeName</td>
                                <td>@reportOfRequest.ExpiryDate</td>
                                <td>@((dtValue.AddDays(1) - DateTime.Now).Days)</td>
                                @*<td class="project-actions text-right">
                                    <a class="btn btn-info btn-sm" style="cursor:pointer; color:#fff;">
                                        <i class="fas fa-envelope-open">
                                        </i>
                                        Send Mail
                                    </a>
                                </td>*@
                            </tr>
                     }
                </tbody>
            </table>

        </div>
    </div>
</section>