@using LicensingERP.Logic.DTO.Class
@model List<MenuGroup>
@{
    ViewBag.Title = "List";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<section class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1>Menu Management</h1>
            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a href="#">Home</a></li>
                    <li class="breadcrumb-item active">Menu List Management Form</li>
                </ol>
            </div>
        </div>
    </div>
</section>

<section class="content">
    <div class="container-fluid">
        <div class="card card-warning">
            <div class="card-header bg-cyan">
                <h3 class="card-title">Menu List Management</h3>
            </div>
            @using (Html.BeginForm("List", "Menu", FormMethod.Post, new { autocomplete = "off" }))
            {
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group">
                                <label>Menu Group ID</label>
                                <select class="form-control select2" name="MenuGroupId" style="width:100%;">
                                    <option value="">--Select--</option>
                                    <option value="0">Unassigned</option>
                                    @foreach (MenuGroup menuGroup in Model)
                                    {
                                        <option value="@menuGroup.Id"> @menuGroup.DisplayText </option>
                                    }
                                </select>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                <label>Menu List Icon</label>
                                <input type="text" class="form-control" placeholder="" name="Icon" required>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                <label>Menu Display text</label>
                                <input type="text" class="form-control" placeholder="" name="DisplayText" required>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                <label>Controller</label>
                                <input type="text" class="form-control" placeholder="" name="Controller" required>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                <label>Action Result</label>
                                <input type="text" class="form-control" placeholder="" name="ActionResult" required>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                <label>Query String</label>
                                <input type="text" class="form-control" placeholder="" name="QueryString">
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                <label>HTTP Type</label>

                                <select class="form-control" style="width: 100%;" name="HttpType" required>
                                    <option selected value="">-- Please Select--</option>
                                    <option value="HttpGet">HTTP GET</option>
                                    <option value="HttpPost">HTTP POST</option>
                                </select>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                <label>Route ID</label>
                                <input type="text" class="form-control" placeholder="" name="RouteId">
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                <label>Status</label>
                                <select class="form-control" name="IsActive" required>
                                    <option selected>---Please Select--</option>
                                    <option value="true">Active</option>
                                    <option value="false">Inactive</option>
                                </select>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                <label>Displayable?</label>
                                <select class="form-control" style="width: 100%;" name="IsDisplayable" required>
                                    <option selected="selected">-- Please Select--</option>
                                    <option value="true">YES</option>
                                    <option value="false">NO</option>
                                </select>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                <label>Has Route ID?</label>
                                <select class="form-control" style="width: 100%;" name="IsRouteID" required>
                                    <option selected="selected">-- Please Select--</option>
                                    <option value="true">YES</option>
                                    <option value="false">NO</option>
                                </select>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                <label>For Report</label>
                                <select class="form-control" name="IsForReport" required>
                                    <option selected>---Please Select--</option>
                                    <option value="true">YES</option>
                                    <option value="false">NO</option>
                                </select>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                <label>For Admin?</label>
                                <select class="form-control" style="width: 100%;" name="IsForAdmin" required>
                                    <option selected="selected">-- Please Select--</option>
                                    <option value="true">YES</option>
                                    <option value="false">NO</option>
                                </select>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                <label>For workflow?</label>
                                <select class="form-control" style="width: 100%;" name="IsForWorkflow" required>
                                    <option selected="selected">-- Please Select--</option>
                                    <option value="true">YES</option>
                                    <option value="false">NO</option>
                                </select>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                <label>Description</label>
                                <textarea class="form-control" name="Description"></textarea>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="card-footer">
                    <button type="submit" class="btn btn-primary">Submit</button>
                </div>
            }
        </div>
        <!-- /.row -->
        <div class="card card-warning">
            <div class="card-header bg-warning">
                <h3 class="card-title">View MenuList</h3>
            </div>
            <div class="card-body">
                <table id="example1" class="table table-striped table-bordered dt-responsive nowrap">
                    <thead>
                        <tr>
                            <th>Display Text</th>
                            <th>Icon</th>
                            <th>Controller</th>
                            <th>Action</th>
                            <th>Is For Admin</th>
                            <th>Is For Workflow?</th>
                            <th>Description</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (MenuList ML in (List<MenuList>)ViewBag.MenuLists)
                        {
                        <tr>
                            <td>@ML.DisplayText</td>
                            <td>@ML.Icon</td>
                            <td>@ML.Controller</td>
                            <td>@ML.ActionResult</td>
                            <td>
                                @if (ML.IsForAdmin)
                                {
                                    <span class="right badge badge-success">Yes</span>
                                }
                                else
                                {
                                    <span class="right badge badge-danger">No</span>
                                }
                            </td>
                            <td>
                                @if (ML.IsForWorkflow)
                                {
                                    <span class="right badge badge-success">Yes</span>
                                }
                                else
                                {
                                    <span class="right badge badge-danger">No</span>
                                }
                            </td>
                            <td>@ML.Description</td>
                        </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</section>

