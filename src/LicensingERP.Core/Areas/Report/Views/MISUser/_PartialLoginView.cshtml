@model List<ReportOfUserLogin>

@if (Model.Count != 0)
{

    <table id="Login_View" class="table table-striped table-bordered dt-responsive nowrap">
        <thead>
            <tr>
                <th>User Name</th>
                <th>Login Date Time</th>
            </tr>
        </thead>
        <tbody>
            @foreach (ReportOfUserLogin login in Model)
            {
                <tr>
                    <td>@login.UserName</td>
                    <td>@login.TransactionDate.ToDisplayDateString()</td>
                </tr>
            }

        </tbody>
    </table>
}
else
{
    <script type="text/javascript">
        toastr.error('No data Found');
    </script>

}
<script type="text/javascript">
    $(document).ready(function () {
        $('#Login_View').DataTable({
            dom: 'lBfrtip',
            buttons: [
                'copy', 'csv', 'excel', 'pdf', 'print'
            ],
            "responsive": true,
        });
    });

    $('.toast').toast('show');
</script>