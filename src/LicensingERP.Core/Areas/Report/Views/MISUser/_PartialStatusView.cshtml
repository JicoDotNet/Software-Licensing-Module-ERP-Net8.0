@model List<ReportOfStatus>

@if (Model.Count != 0)
{

    <table id="status_View" class="table table-striped table-bordered dt-responsive nowrap">
        <thead>
            <tr>
                <th>Request No</th>
                <th>User</th>
                <th>Approved</th>
                <th>Closing Date</th>
                <th>Remark</th>
                <th>Activity Date</th>            
            </tr>
        </thead>
        <tbody>
            @foreach (ReportOfStatus reportOfStatus in Model)
            {
            <tr>
                <td>@reportOfStatus.RequestNo</td>
                <td>@reportOfStatus.FullName</td>
                <td>@(reportOfStatus.IsApproved == true ? "Yes" : "No")</td>
                <td>@reportOfStatus.ApproveRejectDate.ToDisplayDateString()</td>
                <td>@reportOfStatus.Remarks</td>
                <td>@reportOfStatus.TransactionDate.ToDisplayDateString()</td>
            </tr>
            }

        </tbody>
    </table>
}
else
{
    <script type="text/javascript">
        toastr.error('No data Found');
    </script>

}
<script type="text/javascript">
    $(document).ready(function () {
        $('#status_View').DataTable({
            dom: 'lBfrtip',
            buttons: [
                'copy', 'csv', 'excel', 'pdf', 'print'
            ],
            "responsive": true,
        });
    });

    $('.toast').toast('show');
</script>