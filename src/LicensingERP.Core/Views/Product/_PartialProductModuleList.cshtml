@using LicensingERP.Logic.DTO.Class
@model List<ProductModule>


<div class="card">
    <div class="card-header bg-gradient-teal">
        <h3 class="card-title">View Product Module</h3>
    </div>
    <div class="card-body">
        <table id="module_list" class="table table-striped table-bordered dt-responsive nowrap">
            <thead>
                <tr>
                    <th>Module Name</th>
                    <th>Module  Details</th>
                </tr>
            </thead>
            <tbody>
                @foreach (ProductModule PM in Model)
                {
                    <tr>
                        <td>@PM.ModuleName</td>
                        <td>@PM.ModuleDetails</td>

                    </tr>
                }

            </tbody>
        </table>
    </div>
</div>
@section BodyScript{
    <script type="text/javascript">
        $(document).ready(function () {
            $('#module_list').dataTable({
                "bPaginate": true,
                "bLengthChange": true,
                "bFilter": true,
                "bInfo": false,
                "bAutoWidth": false,
                "searching": true
            });
        });
    </script>
}