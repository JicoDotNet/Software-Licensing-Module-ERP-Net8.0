@model WfProcessLicenceType
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<section class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1>Workflow Process</h1>
            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a href="@Url.Action("Index","Home")">Home</a></li>
                    <li class="breadcrumb-item active">Workflow</li>
                </ol>
            </div>
        </div>
    </div>
</section>
<section class="content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-12">
                <div class="card card-danger">
                    <div class="card-header bg-cyan">
                        <h3 class="card-title">Process</h3>
                    </div>
                    @using (Html.BeginForm("Index", "Workflow", FormMethod.Post, new { autocomplete = "off" }))
                    {
                    <div class="card-body">
                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label for="License Type">License Type<span style="color:red">&#42;</span></label>
                                    <select class="form-control select2" name="LicenceTypeId" required>
                                        <option value="" selected>-- Please Select--</option>
                                        @foreach (LicenceType LT in Model.licenceType)
                                        {
                                            <option value="@LT.Id">@LT.TypeName</option>
                                        }
                                    </select>
                                </div>
                            </div>
                        </div><hr />
                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label for="ProcessName">Process Name<span style="color:red">&#42;</span></label>
                                    <input type="text" name="ProcessName" class="form-control" placeholder="Enter Process Name" required>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label for="ProcessCode">Process Code<span style="color:red">&#42;</span></label>
                                    <input type="text" name="ProcessCode" class="form-control" placeholder="Enter Process Code" required>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label for="Initial Process">Start Process<span style="color:red">&#42;</span></label>
                                    <select class="form-control" style="width: 100%;" name="IsInitial" required>
                                        <option selected="selected">-- Please Select--</option>
                                        <option value="true">YES</option>
                                        <option value="false">NO</option>
                                    </select>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label for="End Process">End Process<span style="color:red">&#42;</span></label>
                                    <select class="form-control" style="width: 100%;" name="IsEnd" required>
                                        <option selected="selected">-- Please Select--</option>
                                        <option value="true">YES</option>
                                        <option value="false">NO</option>
                                    </select>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label for="Description">Description<span style="color:red">&#42;</span></label>
                                    <textarea name="Description" class="form-control" placeholder="Enter Description" required></textarea>
                                </div>
                            </div>
                        </div>

                    </div>
                        <div class="card-footer">
                            <button type="submit" class="btn btn-success"><i class="fas fa-save"></i> Submit</button>
                        </div>
                    }
                </div>
            </div>
            <div class="col-md-12">
                <div class="card card-danger">
                    <div class="card-header bg-cyan">
                        <h3 class="card-title">View process</h3>
                    </div>
                    <div class="card-body">
                        <table id="example1" class="table table-striped table-bordered dt-responsive nowrap">
                            <thead>
                                <tr>
                                    <th>License Type</th>
                                    <th>Process Code</th>
                                    <th>Process Name</th>
                                    <th>Initial Procdess</th>
                                    <th>End Process</th>
                                    <th>Description</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (WfProcessLicence WFPro in Model.wfprocess)
                                {
                                    <tr>
                                        <td>@WFPro.TypeName</td>
                                        <td>@WFPro.ProcessCode</td>
                                        <td>@WFPro.ProcessName</td>
                                        <td>
                                            @if (WFPro.IsInitial)
                                            {
                                                <span class="right badge badge-success">Yes</span>
                                            }
                                            else
                                            {
                                                <span class="right badge badge-danger">No</span>
                                            }
                                        </td>
                                        <td>
                                            @if (WFPro.IsEnd)
                                            {
                                                <span class="right badge badge-success">Yes</span>
                                            }
                                            else
                                            {
                                                <span class="right badge badge-danger">No</span>
                                            }
                                        </td>
                                        <td>@WFPro.Description</td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
