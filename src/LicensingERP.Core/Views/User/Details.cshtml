@model UserTypeUserModel
@{
    ViewData["Title"] = "Index1";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<section class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1>User Details</h1>
            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a href="@Url.Action("Index","Home")">Home</a></li>
                    <li class="breadcrumb-item"><a href="@Url.Action("Index","User")">User</a></li>
                    <li class="breadcrumb-item active">User Details</li>
                </ol>
            </div>
        </div>
    </div>
</section>
<section class="content">
    <div class="card-header bg-gradient-teal">
        <h3 class="card-title">Users</h3>
        <div class="card-tools">
            <div class="btn-group">
                <button type="button" class="btn btn-tool dropdown-toggle" data-toggle="dropdown">
                    <i class="fas fa-wrench"></i>
                </button>
                <div class="dropdown-menu dropdown-menu-right" role="menu">
                    <a href="@Url.Action("Index","User")" class="dropdown-item">Add User</a>
                </div>
            </div>
        </div>
    </div>
    <div class="card card-solid">

        <div class="card-body pb-0">
            <div class="row d-flex align-items-stretch">
                @foreach (User U in Model.Users)
                {
                    <div class="col-12 col-sm-6 col-md-4 d-flex align-items-stretch">
                        <div class="card bg-light">
                            <div class="card-header text-muted border-bottom-0">
                                @U.UserTypeName
                            </div>
                            <div class="card-body pt-0">
                                <div class="row">
                                    <div class="col-7">
                                        <h5 class="lead"><b>@U.FullName</b></h5>
                                        <strong class="text-indigo">@U.UserName</strong>
                                        <p class="text-muted text-sm"><b>User Group: </b> @(Model.UserTypes?.FirstOrDefault(a => a.Id == U.UserTypeId)?.UserTypeName) </p>
                                        <ul class="ml-4 mb-0 fa-ul text-muted">
                                            <li class="small"><span class="fa-li"><i class="fas fa-briefcase"></i></span> Designation: @U.Designation</li>
                                            <li class="small"><span class="fa-li"><i class="fas fa-lg fa-building"></i></span> Address: @U.Address</li>
                                            <li class="small"><span class="fa-li"><i class="fas fa-lg fa-phone"></i></span> Phone : + 91 @U.Mobile</li>
                                            <li class="small"><span class="fa-li"><i class="fas fa-lg fa-envelope-open"></i></span> Email : @U.Email</li>
                                        </ul>
                                    </div>
                                    <div class="col-5 text-center">
                                        <img src="~/images/user-128x128.png" alt="user" class="img-circle img-fluid">
                                    </div>
                                </div>
                            </div>
                            <div class="card-footer">
                                <div class="text-right">
                                    <a href="@Url.Action("Index", "User", new { id = U.UserId })" class="btn btn-sm btn-primary">
                                        <i class="fas fa-pen"></i> Edit Profile
                                    </a>
                                </div>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</section>
